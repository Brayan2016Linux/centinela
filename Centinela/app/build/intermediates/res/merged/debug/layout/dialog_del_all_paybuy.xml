<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@color/material_grey_100"
    android:background="#f0f0f0">


    <Space
        android:layout_width="5dp"
        android:layout_height="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:textSize="17dp"
        android:text="@string/eliminarTodoPago"
        android:id="@+id/Borrar_Todo_Pago"
        android:clickable="true"
        android:layout_gravity="center_vertical"/>

    <SurfaceView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"/>


    <Space
        android:layout_width="5dp"
        android:layout_height="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:textSize="17dp"
        android:text="@string/eliminarTodaCompra"
        android:id="@+id/Borrar_Toda_Compra"
        android:clickable="true"
        android:layout_gravity="center_vertical"/>

    <SurfaceView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:textSize="17dp"
        android:text="@string/eliminarTodoAdelanto"
        android:id="@+id/Borrar_Todo_Adelanto"
        android:clickable="true"
        android:layout_gravity="center_vertical"/>

    <SurfaceView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

</LinearLayout>