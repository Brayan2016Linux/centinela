<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85767676"
    tools:context=".BuyActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/compraTitulo"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:id="@+id/etiquetaIngreso"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"
                android:linksClickable="false"
                android:longClickable="false"
                android:background="#9d404040"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <Space
                    android:layout_width="20dp"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detalleCompra"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <EditText
                    android:layout_width="325dp"
                    android:layout_height="fill_parent"
                    android:background="#ffffffff"
                    android:id="@+id/detalleCompraInput"
                    android:inputType="textPersonName"
                    />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/montoPago"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <EditText
                    android:layout_width="325dp"
                    android:layout_height="fill_parent"
                    android:background="#ffffffff"
                    android:id="@+id/MontoCompra"
                    android:inputType="numberDecimal"
                    android:digits="0123456789.,-"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/periodo_Credito"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:layout_width="121dp"
                        android:layout_height="30dp"
                        android:id="@+id/Spinner_periodoCredito"
                        />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mesesTitulo"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/modalidad_Compra"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/Spinner_modalidadCompra"
                        />

                </LinearLayout>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fechaCompra"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <DatePicker
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/fecha_Compra">

                    </DatePicker>

                </LinearLayout>
                
                <Space
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CancelarBoton"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/button_CNL"/>

                <Space
                    android:layout_width="85dp"
                    android:layout_height="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GuardarBoton"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/buttonOK"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
